<script>
$(document).ready(function(e){
        init(e);
        loadMallData(renderAll); 
        $(".info_toggle").show();
    });
    
    function renderAll(){
        $('.flexslider').flexslider({
            animation: "slide",
            controlNav: false,
            directionNav: false,        
            prevText: "Previous",
            nextText: "Next"
        });
        
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        event_details = getEventDetailsBySlug(slug);
        renderEventDetails('#event_dets_container', '#event_dets_template', event_details);
        
        show_content();
    }
</script>