<script>
    $(window).load(function() {
        $('.flexslider').flexslider({
            animation: "slide",
            controlNav: false,
            directionNav: false,        
            prevText: "Previous",
            nextText: "Next"
        });
    });
    $(document).ready(function(e){
        init(e);
        loadMallData(renderAll); 
        
    });

    function toggle_detail(promo_div){
        $("#"+promo_div+" .info_toggle").toggle();
        
         if ($("#read_"+promo_div).text().indexOf("more") != -1){
           $("#read_"+promo_div).text("Read less"); 
        } else {
           $("#read_"+promo_div).text("Read more");    
        }  
    }
    
    function renderAll(){
   
        var jobs = getJobsList();
        jobs.sort(function(a, b) {
                var textA = a.name;
                var textB = b.name;
                return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;
        });
        if (jobs.length > 0){
            renderJobs("#jobs_container","#jobs_template", jobs);
        }
    
        show_content();
   
    }
</script>